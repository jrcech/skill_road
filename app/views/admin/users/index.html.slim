ruby:
  thead = [
    '',
    search_icon_for(t('tables.headings.name')),
    search_icon_for(t('tables.headings.email')),
    t('models.roles.one'),
    icon_with_tooltip(:articles)
  ]

  tbody = []
  @items.each do |item|
    tbody << {
      cells: [
        highlight(item.full_name, @query),
        highlight(item.email, @query),
        item.role.to_s.titleize,
        '',
        '',
        ''
      ],
      buttons: [
        ellipsis_button(
          role_buttons(item, type: :dropdown),
          impersonate_button(item, type: :dropdown),
          edit_user_button(item, type: :dropdown),
          dropdown_separator,
          destroy_user_button(item, type: :dropdown)
        )
    ],
      detail_path: path_for_show(item)
    }
  end

== render 'shared/index_table', thead: thead, tbody: tbody
